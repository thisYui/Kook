{
  "name": "kook-backend",
  "version": "1.0.0",
  "description": "Backend for Kook recipe sharing application",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "prisma:init": "prisma init",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init_schema",
    "prisma:migrate:create": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "prisma:format": "prisma format",
    "seed": "node src/db/seed/seed.js",
    "db:reset": "npm run prisma:reset && npm run seed",
    "db:init": "node src/db/init/init.js",
    "setup:prisma": "npm install prisma --save-dev && npm install @prisma/client && npm run prisma:init",
    "setup:db": "npm run prisma:migrate && npm run prisma:generate && npm run seed && npm run db:init"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^5.22.0"
  }
}
